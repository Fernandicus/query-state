{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler", // important to avoid problems import files without .ts extension
    "outDir": "dist",
    "types": ["vitest/globals"]

    /* "paths": {
      "@/src/*: ["./src/*"]
    }*/
  },
  "include": ["src/**/*", "__tests__/**/*", "vite.config.json"],
  "exclude": ["dist", "node_modules"]
}
